[clone]
	directory = $HOME/code
[color]
	ui = true
[alias]
	co = checkout
	new = checkout -b
	cm = commit -m 
	cp = cherry-pick
	st = !echo 'untracked' && \
		git ls-files . --exclude-standard --others && \
		echo && \
		echo 'unstaged' && \
		git diff --stat && \
		echo '\nstaged' &&  \
		git diff --cached --stat
	sts = status -s
	br = branch
	ci = commit -a -v
	com = checkout master
	rc = rebase --continue
	mc = merge --continue
	unstage = reset HEAD--
	last = log-1 HEAD
	lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
	amend = commit --amend --no-edit
	dif = diff HEAD
	diffc = diff --cached
	up = !git branch --set-upstream-to=origin/`git symbolic-ref --short HEAD`
	pt = push origin --tag
	to = !git branch | fzf | xargs git switch -q
	d = !git branch | fzf | xargs git br -d
	dd = !git branch | fzf | xargs git br -D
	dr = !git branch -r | fzf | xargs | sed -e 's/^origin\\///' | xargs -I {} git push origin :{}
	; https://words.filippo.io/git-fixup-amending-an-older-commit/
	fixup = "!f() { TARGET=$(git rev-parse "$1"); git commit --fixup=$TARGET ${@:2} && GIT_EDITOR=true git rebase -i --autostash --autosquash $TARGET^; }; f"
[core]
	excludesfile = ~/.git-config/global.gitignore
	hooksPath = ~/.git-config/hooks/
	;pager = delta
[push]
	default = current
[pull]
	rebase = true
[remote "origin"]
	prune = true

