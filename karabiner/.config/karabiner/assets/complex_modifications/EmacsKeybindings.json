{
    "title": "Emacs key bindings",
    "maintainers": [
        "tekezo"
    ],
    "rules": [
        {
            "description": "Emacs key bindings [option+b/f/d]",
            "manipulators": [
                {
                    "type": "basic",
                    "from": {
                        "key_code": "b",
                        "modifiers": {
                            "mandatory": [
                                "option"
                            ],
                            "optional": [
                                "caps_lock",
                                "shift"
                            ]
                        }
                    },
                    "to": [
                        {
                            "key_code": "left_arrow",
                            "modifiers": [
                                "left_option"
                            ]
                        }
                    ],
                    "conditions": [
                        {
                            "type": "frontmost_application_if",
                            "bundle_identifiers": [
                                "org.mozilla.firefox",
                                "com.google.Chrome",
                                "com.tinyspeck.slackmacgap",
                                "com.luckymarmot.Paw",
                                "com.nosqlbooster.mongodb",
                                "com.apple.Notes"
							]
                        }
                    ]
                },
                {
                    "type": "basic",
                    "from": {
                        "key_code": "f",
                        "modifiers": {
                            "mandatory": [
                                "option"
                            ],
                            "optional": [
                                "caps_lock",
                                "shift"
                            ]
                        }
                    },
                    "to": [
                        {
                            "key_code": "right_arrow",
                            "modifiers": [
                                "left_option"
                            ]
                        }
                    ],
                    "conditions": [
                        {
                            "type": "frontmost_application_if",
                            "bundle_identifiers": [
                                "org.mozilla.firefox",
                                "com.google.Chrome",
                                "com.tinyspeck.slackmacgap",
                                "com.luckymarmot.Paw",
                                "com.nosqlbooster.mongodb",
                                "com.apple.Notes"
							]
                        }
                    ]
                },
                {
                    "type": "basic",
                    "from": {
                        "key_code": "d",
                        "modifiers": {
                            "mandatory": [
                                "option"
                            ],
                            "optional": [
                                "caps_lock"
                            ]
                        }
                    },
                    "to": [
                        {
                            "key_code": "delete_forward",
                            "modifiers": [
                                "left_option"
                            ]
                        }
                    ],
                    "conditions": [
                        {
                            "type": "frontmost_application_if",
                            "bundle_identifiers": [
                                "org.mozilla.firefox",
                                "com.google.Chrome",
                                "com.tinyspeck.slackmacgap",
                                "com.luckymarmot.Paw",
                                "com.nosqlbooster.mongodb",
                                "com.apple.Notes"
                            ]
                        }
                    ]
                }
            ]
        }
    ]
}
