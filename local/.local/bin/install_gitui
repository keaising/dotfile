#!/usr/bin/env zsh

if [[ $(uname -s) == 'Linux' ]]; then
	curl -s https://api.github.com/repos/extrawurst/gitui/releases/latest | grep -wo "https.*linux.*gz" | wget -qi -
	tar xzvf gitui-linux-musl.tar.gz
	rm gitui-linux-musl.tar.gz
	mv gitui ~/.local/bin/
else
	brew install gitui
fi

gitui --version
